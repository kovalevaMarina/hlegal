doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Hlegal
    link(rel="stylesheet", href="./styles/main.css")
  body
    include ./pug/includes/mixins.pug
    .section-gradient
      .section-gradient__shadow.section-gradient__shadow--first
      .section-gradient__shadow.section-gradient__shadow--second
      .main-wrap
        .main-wrap-bg
          object.main-wrap-bg__h(data="./assets/svg/symbol_letter.svg")
        .main-section
          header.header
            .container
              .header__wrap
                .header-grid
                  .header-grid__logo
                    a(href="./index.html").logo.logo__wrap
                      include ./pug/includes/logo.pug
                  .header-grid__contact.header-space.flex-d.header-flex
                    ul.lang-list.flex-d.flex-align--center
                      +langItem('Ук')
                      +langItem('Ру')
                      +langItem('En', 'lang-list__item--active')
                    ul.contact-list.header-contact.flex-d.flex-align--center
                      li.contact-list__item.d--sm
                        a(href="https://goo.gl/maps/NM6RguTph8YZTya29" target='_blank').txt--main.txt--white Kyiv, Mechnikova str., 14/1
                      li.contact-list__item
                        a(href="tel:0800211927").txt--main.txt--bold.txt--white 0800 211 927
                      li.contact-list__item.d--sm
                        a(href="#").contact-list__link--icon
                          svg.icon-fb__link.icon-fb__link--white(width='24' height='25' viewbox='0 0 24 25' fill='none' xmlns='http://www.w3.org/2000/svg')
                            g(clip-path='url(#clip0_25631_2608)')
